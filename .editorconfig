# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, CSS, HTML - tabs with 4-char indent
[*.{js,cjs,mjs,css,html,htm}]
indent_style = tab
indent_size = 4

# JSON files - 2 spaces (convention)
[*.json]
indent_style = space
indent_size = 2

# Markdown files - 2 spaces (convention)
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files - 2 spaces (convention)
[*.{yml,yaml}]
indent_style = space
indent_size = 2
